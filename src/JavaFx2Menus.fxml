<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane id="Border" prefHeight="400" prefWidth="800" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="MenuController">
    <top>
    <MenuBar fx:id="menuBar" onKeyPressed="#handleKeyInput">
            <Menu text="File">
                <MenuItem onAction="#handleAboutAction" text="New Project..." />
                <MenuItem text="Open Project..." />
                <SeparatorMenuItem />
                <MenuItem text="Export..." />
                <MenuItem text="Save As..." />
                <MenuItem text="Save" />
                <SeparatorMenuItem />
                <MenuItem text="Exit" />
            </Menu>
            <Menu text="Edit">
                <MenuItem text="Copy" />
                <MenuItem text="Cut" />
                <MenuItem text="Paste" />
            </Menu>
            <Menu text="Help">
                <MenuItem disable="true" text="Search" />
                <MenuItem text="Online Manual" visible="false" />
                <SeparatorMenuItem />
                <MenuItem onAction="#handleAboutAction" text="About" />
            </Menu>
    </MenuBar>
    </top>
   <left>
      <ScrollPane>
         <content>
            <VBox alignment="TOP_CENTER" spacing="10.0">
               <children>
                  <Label alignment="CENTER" text="World Settings" textAlignment="CENTER" underline="true">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                     <effect>
                        <Blend />
                     </effect>
                  </Label>
                  <GridPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" vgap="10.0">
                    <columnConstraints>
                      <ColumnConstraints hgrow="SOMETIMES" maxWidth="107.0" minWidth="10.0" prefWidth="99.0" />
                      <ColumnConstraints hgrow="SOMETIMES" maxWidth="145.0" minWidth="10.0" prefWidth="101.0" />
                    </columnConstraints>
                    <rowConstraints>
                      <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
                      <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
                      <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                     <children>
                        <Label text="Gravity:" />
                        <TextField fx:id="gravityField" promptText="gravity..." GridPane.columnIndex="1" />
                        <Label text="Window Width:" GridPane.rowIndex="2" />
                        <TextField fx:id="windowWidthField" promptText="width..." GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        <Label text="Window Height:" GridPane.rowIndex="3" />
                        <TextField fx:id="windowHeightField" promptText="height..." GridPane.columnIndex="1" GridPane.rowIndex="3" />
                        <Label text="BackGround:" GridPane.rowIndex="4" />
                        <CheckBox fx:id="fullScreenBox" mnemonicParsing="false" text="FullScreen" GridPane.rowIndex="5" />
                        <Label text="Title:" GridPane.rowIndex="6" />
                        <TextField fx:id="titleField" promptText="title..." GridPane.columnIndex="1" GridPane.rowIndex="6" />
                        <Button fx:id="backGroundButton" mnemonicParsing="false" onAction="#handleBackGroundButton" prefHeight="25.0" prefWidth="99.0" text="Picture..." GridPane.columnIndex="1" GridPane.rowIndex="4" />
                     </children>
                     <padding>
                        <Insets left="10.0" />
                     </padding>
                  </GridPane>
               </children>
               <padding>
                  <Insets bottom="10.0" top="10.0" />
               </padding>
               <effect>
                  <Blend />
               </effect>
            </VBox>
         </content>
         <effect>
            <Blend />
         </effect>
      </ScrollPane>
   </left>
</BorderPane>
