<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane id="Border" prefHeight="400" prefWidth="800" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="MenuController">
    <top>
    <MenuBar fx:id="menuBar" onKeyPressed="#handleKeyInput">
            <Menu text="File">
                <MenuItem onAction="#handleAboutAction" text="New Project..." />
                <MenuItem text="Open Project..." />
                <SeparatorMenuItem />
                <MenuItem text="Export..." />
                <MenuItem text="Save As..." />
                <MenuItem text="Save" />
                <SeparatorMenuItem />
                <MenuItem text="Exit" />
            </Menu>
            <Menu text="Edit">
                <MenuItem text="Copy" />
                <MenuItem text="Cut" />
                <MenuItem text="Paste" />
            </Menu>
            <Menu text="Help">
                <MenuItem disable="true" text="Search" />
                <MenuItem text="Online Manual" visible="false" />
                <SeparatorMenuItem />
                <MenuItem onAction="#handleAboutAction" text="About" />
            </Menu>
    </MenuBar>
    </top>
   <left>
      <ScrollPane>
         <content>
            <GridPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" vgap="10.0">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="107.0" minWidth="10.0" prefWidth="107.0" />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="145.0" minWidth="10.0" prefWidth="93.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Label text="Gravity:" />
                  <TextField fx:id="GravityField" promptText="gravity..." GridPane.columnIndex="1" />
                  <Label text="Window Width:" GridPane.rowIndex="1" />
                  <TextField fx:id="windowWidthField" promptText="width..." GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <Label text="Window Height:" GridPane.rowIndex="2" />
                  <TextField fx:id="WindowHeightField" promptText="height..." GridPane.columnIndex="1" GridPane.rowIndex="2" />
                  <Label text="BackGround:" GridPane.rowIndex="3" />
                  <TextField fx:id="BackGroundField" promptText="picture..." GridPane.columnIndex="1" GridPane.rowIndex="3" />
                  <Label text="FullScreen:" GridPane.rowIndex="4" />
                   <TextField fx:id="FullScreenField" promptText="true or false" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                  <Label text="Title:" GridPane.rowIndex="5" />
                  <TextField promptText="title..." GridPane.columnIndex="1" GridPane.rowIndex="5" />
               </children>
            </GridPane>
         </content>
      </ScrollPane>
   </left>
</BorderPane>
